server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  # Serve app
  location / {
    try_files $uri /index.html;
  }

  # Proxy API to Flask Service name in k8s or env (for Compose prod-like you can swap host)
  location /api/ {
    proxy_pass http://web:8000;  # In k8s, change to the web service DNS if different
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
  }
}
